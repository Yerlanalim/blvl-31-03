rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated user to read/write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated user to read/write their own progress data
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read levels, artifacts, and faq
    match /levels/{levelId} {
      allow read: if request.auth != null;
    }
    
    match /artifacts/{artifactId} {
      allow read: if request.auth != null;
      
      // Prevent direct updating of downloadCount by users
      allow write: if request.auth != null && 
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['downloadCount']);
    }
    
    match /faq/{faqId} {
      allow read: if request.auth != null;
    }
    
    // Allow users to write to their own chat messages
    match /chats/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 